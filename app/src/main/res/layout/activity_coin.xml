<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/foreground">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="?attr/colorPrimary"
            android:scaleType="centerCrop"
            android:tint="@color/background_mask" />

        <com.zlylib.titlebarlib.ActionBarCommon
            android:id="@+id/abc"
            style="@style/ActionBar.Common.Back"
            android:background="@color/transparent"
            app:abc_rightIconRes="@mipmap/ic_rule"
            app:abc_titleText="我的积分" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abc"
            android:layout_alignBottom="@+id/iv_bg"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/basic_ui_action_bar_text"
            android:textSize="80sp"
            tools:text="520" />

    </RelativeLayout>

    <com.zlylib.multistateview.MultiStateView
        android:id="@+id/msv"
        style="@style/StateView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePureScrollMode="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:itemCount="10"
                tools:listitem="@layout/rv_item_coin_record" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </com.zlylib.multistateview.MultiStateView>



</LinearLayout>