<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--circle Image View-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="HeartView">
        <attr name="heart_sizeBasic" format="enum">
            <enum name="none" value="0" />
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
        <attr name="heart_color" format="reference|color" />
        <attr name="heart_edgeColor" format="reference|color" />
        <attr name="heart_centerX" format="reference|float" />
        <attr name="heart_centerY" format="reference|float" />
        <attr name="heart_radius" format="reference|float" />
        <attr name="heart_strokeColor" format="reference|color" />
        <attr name="heart_strokeWidth" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="RevealLayout">
        <attr name="rl_checkedLayout" format="reference" />
        <attr name="rl_uncheckedLayout" format="reference" />
        <attr name="rl_checked" format="boolean|reference" />
        <attr name="rl_animDuration" format="integer|reference" />
        <attr name="rl_checkWithExpand" format="boolean|reference" />
        <attr name="rl_uncheckWithExpand" format="boolean|reference" />
        <attr name="rl_allowRevert" format="boolean|reference" />
        <attr name="rl_hideBackView" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="CollectView">
        <attr name="cv_uncheckedColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="PercentImageView">
        <attr name="piv_basics" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
        <attr name="piv_percent" format="float" />
    </declare-styleable>

</resources>